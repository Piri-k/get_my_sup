<% @services.each do |service|  %>
      <div class="col-4">
        <%= link_to service_path(service), class: 'text-decoration-none text-black' do %>
        <div class="card mb-3 p-3 mb-5 card-background">
          <%= cl_image_tag (service.photos[0].present? ? service.photos[0].key : "logo.png"), height: 400, width: 400, crop: :fill, :gravity=>"auto", class: "card-img-top" %>
          <div class="card-body">
            <h4 class="card-title"><strong><%= service.title %></strong></h4>
            <h5 class="card-title"><i><%= service.content %></i></h5>
            <p class="card-text"><i class="fa-solid fa-mask"></i> <strong><%= service.user.alias %></strong></>
              <div class="d-flex justify-content-between">
                <p class="card-text"><i class="fa-solid fa-location-dot"></i> <%= service.location %></p>
                <p class="card-text"><i class="fa-solid fa-coins"></i> <%= service.price_day %>â‚¬/day</p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% end  %>
