<h1 class="text-center">My Service</h1>
<div class="container">
<%= link_to "Add a service", new_service_path, class: "btn btn-primary" %>
  <div class="row">
    <% @services.each do |service| %>
      <div class="col-4">
        <%= link_to service_path(service), class: 'text-decoration-none text-black' do %>
        <div class="card mb-3">
          <img class="card-img-top" src="https://cdn2.unrealengine.com/Diesel%2Fproductv2%2Fbatman-arkham-knight%2FEGS_WB_Batman_Arkham_Knight_G1_1920x1080_19_0911-1920x1080-1d69e15f00cb5ab57249f208f1f8f45d52cbbc59.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= service.title %></h5>
            <h5 class="card-title"><%= service.content %></h5>
            <p class="card-text"><%= service.user.alias %></p>
            <p class="card-text"><%= service.price_day %>â‚¬/day</p>
            <p class="card-text"><%= service.location %></p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>
        <% end %>
      </div>
      <% end  %>
  </div>
</div>

